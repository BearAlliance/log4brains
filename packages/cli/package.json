{
  "name": "@log4brains/cli",
  "version": "0.0.0",
  "description": "Manage your Architecture Decision Records (ADR) with log4brains",
  "repository": "git@github.com:log4brains/log4brains.git",
  "author": "Thomas Vaillant <thomas+github@bluebricks.dev>",
  "license": "Apache-2.0",
  "private": false,
  "bin": {
    "log4brains": "./dist/bin/log4brains"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --build tsconfig.build.json && copyfiles -u 1 src/log4brains dist",
    "clean": "rimraf ./dist",
    "typescript": "tsc --noEmit",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint . --ext ts --ignore-pattern '/dist/' --max-warnings=0",
    "lint-fix": "eslint . --ext ts --ignore-pattern '/dist/' --max-warnings=0 --fix"
  },
  "dependencies": {
    "@log4brains/core": "0.0.0",
    "cli-table3": "^0.6.0",
    "commander": "^6.1.0",
    "esm": "^3.2.25",
    "inquirer": "^7.3.3",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/inquirer": "^7.3.1",
    "copyfiles": "^2.4.0"
  }
}
