    "lint": "eslint . --ext ts,tsx --ignore-pattern '/out/' --max-warnings=0",
    "lint-fix": "eslint . --ext ts,tsx --ignore-pattern '/out/' --max-warnings=0 --fix"
  },
  "dependencies": {
    "@log4brains/core": "0.0.0",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "esm": "^3.2.25",
    "next": "9.5.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.49",
    "@types/signale": "^1.4.1",
    "@types/url-parse": "^1.4.3",
    "copyfiles": "^2.4.0"
  }
}
