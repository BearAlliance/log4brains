{
  "name": "@log4brains/web",
  "version": "0.0.0",
  "description": "Log4brains web UI to edit and publish your Architecture Decision Records (ADR)",
  "repository": "git@github.com:log4brains/log4brains.git",
  "author": "Thomas Vaillant <vaillant.thomas+gh@gmail.com>",
  "license": "Apache-2.0",
  "private": false,
  "bin": {
    "log4brains": "./dist/bin/log4brains"
  },
  "scripts": {
    "next:dev": "next dev",
    "build": "tsc --noEmit false && copyfiles -u 1 src/bin/log4brains dist",
